{
  "container": {
    "display": "flex",
    "alignItems": "center",
    "cursor": "pointer",
    "border": "3px solid #DF2E38",
    "padding": "0 0.7em 0 1.6em",
    "backgroundColor": "#DF2E38",
    "borderRadius": "0 4em 4em 0"
  },
  "button": {
    "backgroundColor": "#DF2E38",
    "color": "#FFFFFF",
    "width": 34,
    "height": 34,
    "margin": 0
  },
  "copy": {
    "fontSize": "1.5rem",
    "fontWeight": "bold",
    "color": "#FFFFFF",
    "letterSpacing": 1
  },
  "icon": {
    "width": 30,
    "height": 30
  }
}
